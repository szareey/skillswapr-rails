<%= render "shared/search_bar" %>
<ul>
  <% @users.each do |user| %>
    <% teach_skills = user.teachable_skills.map &:name %>
    <% learn_skills = user.learnable_skills.map &:name %>
    <li class="list-group-item" id="user">
      <div class="row">
        <div class="col-md-1">
        <img id="user_image" src='<%= user.user_img %>'/>
        </div>
        <div class="col-md-14" id="user_info">
          <div id="text">
            <p id="text">Username:<a href="/users/<%= user.id %>" target="_blank"><%= user.username %></a></p>
            <p id="text">Learning:
              <%= render partial: "/shared/list_skills", collection: (user.teachable_skills.map &:name), locals: {format: "info"} %>
            </p>
            <p id="text">Teaching:
            <%= render partial: "/shared/list_skills", collection: (user.learnable_skills.map &:name), locals: {format: "success"} %>
            </p>
          </div>
        </div>
      </div>
    </li>
<% end %>
</ul>