<div class='row'>
<div class='col-sm-4'>
    <h1><%=@user.username%>'s Profile</h1>
    <img id="" src='<%= @user.user_img %>'/>
    <h3>About</h3>
    <p><%=@user.blurb%></p>
  </div> 
   <a class="btn btn-primary" style ="float: right" href="/" role="button">
 <i class="glyphicon glyphicon-dashboard"></i>Dashboard</a>  
  
  <div class='col-sm-8' id="skills_show">
    <h2><%= @user.username %> wants to learn</h2>
    <%= render partial: "/shared/list_skills", collection: @teachables, locals: {format: "info"} %>

    <h2><%= @user.username %> wants to teach</h2>
    <%= render partial: "/shared/list_skills", collection: @learnables, locals: {format: "success"} %>
    <div>
      <% if @user.show_contact == true && @user.get_matches.include?(@logged_in_user) %>
        <h1><span class="label label-primary"><%= @user.username %> would like to meet you! Email her/him at</span></h1>
        <h1><span class="label label-primary"><%= @user.email %></span></h1>
      <% end %> 
    </div>
  </div>

</div>
